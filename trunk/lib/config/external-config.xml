<?xml version="1.0" encoding="UTF-8"?>
<project name="external-config">
  <!-- Ensure property exists -->
  <fail message="Please set external.dir" unless="external.dir"/>

  <!-- Cache Benchmark Framework -->
  <path id="cache.benchmark.compile.path">
    <fileset dir="${external.dir}/cache-benchmark/r7014">
      <include name="benchmark-fwk.jar"/>
    </fileset>
  </path>
  <path id="cache.benchmark.deploy.path">
    <path refid="cache.benchmark.compile.path"/>
    <fileset dir="${external.dir}/cache-benchmark/r7014">
      <include name="commons-beanutils.jar"/>
      <include name="commons-digester.jar"/>
      <include name="commons-logging.jar"/>
      <include name="commons-math-1.0.jar"/>
      <include name="jcommon.jar"/>
      <include name="jfreechart.jar"/>
      <include name="log4j.jar"/>
    </fileset>
  </path>

  <!-- Colt -->
  <path id="colt.compile.path">
    <fileset dir="${external.dir}/colt/1.2.0">
      <include name="colt.jar"/>
    </fileset>
  </path>
  <path id="colt.deploy.path">
    <path refid="colt.compile.path"/>
    <fileset dir="${external.dir}/colt/1.2.0">
      <include name="concurrent.jar"/>
    </fileset>
  </path>

  <!-- Commons Collections -->
  <path id="commons.collections.compile.path">
    <fileset dir="${external.dir}/commons-collections/3.2.1">
      <include name="commons-collections-3.2.1.jar"/>
    </fileset>
  </path>
  <path id="commons.collections.deploy.path">
    <path refid="commons.collections.compile.path"/>
  </path>

  <!-- Commons Lang -->
  <path id="commons.lang.compile.path">
    <fileset dir="${external.dir}/commons-lang/2.4">
      <include name="commons-lang-2.4.jar"/>
    </fileset>
  </path>
  <path id="commons.lang.deploy.path">
    <path refid="commons.lang.compile.path"/>
  </path>

  <!-- Commons Math -->
  <path id="commons.math.compile.path">
    <fileset dir="${external.dir}/commons-math/1.2">
      <include name="commons-math-1.2.jar"/>
    </fileset>
  </path>
  <path id="commons.math.deploy.path">
    <path refid="commons.math.compile.path"/>
  </path>

  <!-- Ehcache -->
  <path id="ehcache.compile.path">
    <fileset dir="${external.dir}/ehcache/1.5.0">
      <include name="ehcache-1.5.0.jar"/>
    </fileset>
  </path>
  <path id="ehcache.deploy.path">
    <path refid="ehcache.compile.path"/>
    <fileset dir="${external.dir}/ehcache/1.5.0">
      <include name="backport-util-concurrent-3.0.jar"/>
      <include name="commons-logging-1.0.4.jar"/>
      <include name="jsr107cache-1.0.jar"/>
    </fileset>
  </path>

  <!-- FindBugs -->
  <path id="findbugs.compile.path">
    <fileset dir="${external.dir}/findbugs/1.3.5">
      <include name="findbugs-ant.jar"/>
    </fileset>
  </path>
  <path id="findbugs.deploy.path">
    <path refid="findbugs.compile.path"/>
  </path>
  <property
   name="findbugs.home"
   value="${external.dir}/findbugs/1.3.5"
  />
  <taskdef
   name="findbugs"
   classname="edu.umd.cs.findbugs.anttask.FindBugsTask"
   classpathref="findbugs.compile.path"
  />

  <!-- JBoss Cache 2.1.0 -->
  <path id="jboss.cache-2.1.0.compile.path">
    <fileset dir="${external.dir}/jboss-cache/2.1.0">
      <include name="jbosscache-core.jar"/>
    </fileset>
  </path>
  <path id="jboss.cache-2.1.0.deploy.path">
    <path refid="jboss.cache-2.1.0.compile.path"/>
    <fileset dir="${external.dir}/jboss-cache/2.1.0">
      <include name="jboss-common-core.jar"/>
      <include name="jboss-javaee.jar"/>
      <include name="jcip-annotations.jar"/>
      <include name="jgroups.jar"/>
    </fileset>
  </path>

  <!-- JBoss Cache 2.2.0 -->
  <path id="jboss.cache-2.2.0.compile.path">
    <fileset dir="${external.dir}/jboss-cache/2.2.0">
      <include name="jbosscache-core.jar"/>
    </fileset>
  </path>
  <path id="jboss.cache-2.2.0.deploy.path">
    <path refid="jboss.cache-2.2.0.compile.path"/>
    <fileset dir="${external.dir}/jboss-cache/2.2.0">
      <include name="jboss-common-core.jar"/>
      <include name="jboss-javaee-5.0.0.Beta3.jar"/>
      <include name="jcip-annotations-1.0.jar"/>
      <include name="jgroups-2.6.2.jar"/>
    </fileset>
  </path>

  <!-- JBoss Cache 3.0.0 -->
  <path id="jboss.cache-3.0.0.compile.path">
    <fileset dir="${external.dir}/jboss-cache/3.0.0">
      <include name="jbosscache-core.jar"/>
    </fileset>
  </path>
  <path id="jboss.cache-3.0.0.deploy.path">
    <path refid="jboss.cache-3.0.0.compile.path"/>
    <fileset dir="${external.dir}/jboss-cache/3.0.0">
      <include name="commons-codec.jar"/>
      <include name="jboss-common-core.jar"/>
      <include name="jboss-logging-spi.jar"/>
      <include name="jcip-annotations.jar"/>
      <include name="jgroups.jar"/>
      <include name="jta.jar"/>
    </fileset>
  </path>

  <!-- PMD -->
  <path id="pmd.compile.path">
    <fileset dir="${external.dir}/pmd/4.2.4">
      <include name="asm-3.1.jar"/>
      <include name="jaxen-1.1.1.jar"/>
      <include name="pmd-4.2.4.jar"/>
    </fileset>
  </path>
  <path id="pmd.deploy.path">
    <path refid="pmd.compile.path"/>
  </path>
  <taskdef
   name="pmd"
   classname="net.sourceforge.pmd.ant.PMDTask"
   classpathref="pmd.compile.path"
  />

  <!-- TestNG -->
  <path id="testng.compile.path">
    <fileset dir="${external.dir}/testng/5.8">
      <include name="testng-5.8-jdk15.jar"/>
    </fileset>
  </path>
  <path id="testng.deploy.path">
    <path refid="testng.compile.path"/>
  </path>
  <taskdef
   resource="testngtasks"
   classpathref="testng.compile.path"
  />
</project>
