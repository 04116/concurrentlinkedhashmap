<?xml version="1.0" encoding="UTF-8"?>
<project name="external-config">
  <!-- Ensure property exists -->
  <fail message="Please set external.dir" unless="external.dir"/>

  <!-- Awaitility -->
  <path id="awaitility.compile.path">
    <fileset dir="${external.dir}/awaitility/1.3.2">
      <include name="awaitility.jar"/>
    </fileset>
  </path>
  <path id="awaitility.deploy.path">
    <path refid="awaitility.compile.path"/>
    <fileset dir="${external.dir}/awaitility/1.3.2/lib">
      <include name="cglib-nodep-2.2.jar"/>
      <include name="objenesis-1.2.jar"/>
    </fileset>
  </path>

  <!-- Cache Benchmark Framework -->
  <path id="cache.benchmark.compile.path">
    <fileset dir="${external.dir}/cache-benchmark">
      <include name="benchmark-fwk.jar"/>
    </fileset>
  </path>
  <path id="cache.benchmark.deploy.path">
    <path refid="cache.benchmark.compile.path"/>
    <fileset dir="${external.dir}/cache-benchmark/lib">
      <include name="commons-beanutils.jar"/>
      <include name="commons-digester.jar"/>
      <include name="commons-logging.jar"/>
      <include name="commons-math-1.0.jar"/>
      <include name="jcommon.jar"/>
      <include name="jfreechart.jar"/>
      <include name="log4j.jar"/>
    </fileset>
  </path>

  <!-- Caliper -->
  <path id="caliper.compile.path">
    <fileset dir="${external.dir}/caliper">
      <include name="caliper.jar"/>
    </fileset>
  </path>
  <path id="caliper.deploy.path">
    <path refid="caliper.compile.path"/>
  </path>

  <!-- Cobertura -->
  <path id="cobertura.compile.path">
    <fileset dir="${external.dir}/cobertura/1.9.4.1">
      <include name="cobertura.jar"/>
    </fileset>
    <fileset dir="${external.dir}/cobertura/1.9.4.1/lib">
      <include name="asm-3.0.jar"/>
      <include name="asm-tree-3.0.jar"/>
      <include name="jakarta-oro-2.0.8.jar"/>
      <include name="log4j-1.2.9.jar"/>
    </fileset>
  </path>
  <taskdef
   resource="tasks.properties"
   classpathref="cobertura.compile.path"
  />

  <!-- Commons Lang -->
  <path id="commons.lang.compile.path">
    <fileset dir="${external.dir}/commons-lang/2.5">
      <include name="commons-lang-2.5.jar"/>
    </fileset>
  </path>
  <path id="commons.lang.deploy.path">
    <path refid="commons.lang.compile.path"/>
  </path>

  <!-- Ehcache -->
  <path id="ehcache.compile.path">
    <fileset dir="${external.dir}/ehcache/2.0.1">
      <include name="ehcache-core-2.0.1.jar"/>
    </fileset>
  </path>
  <path id="ehcache.deploy.path">
    <path refid="ehcache.compile.path"/>
    <fileset dir="${external.dir}/ehcache/2.0.1/lib">
      <include name="slf4j-api-1.5.8.jar"/>
      <include name="slf4j-jdk14-1.5.8.jar"/>
    </fileset>
  </path>

  <!-- FindBugs -->
  <path id="findbugs.compile.path">
    <fileset dir="${external.dir}/findbugs/1.3.9">
      <include name="findbugs-ant.jar"/>
    </fileset>
  </path>
  <path id="findbugs.deploy.path">
    <path refid="findbugs.compile.path"/>
  </path>
  <property
   name="findbugs.home"
   value="${external.dir}/findbugs/1.3.9"
  />
  <taskdef
   name="findbugs"
   classname="edu.umd.cs.findbugs.anttask.FindBugsTask"
   classpathref="findbugs.compile.path"
  />
	
  <!-- Guava -->
  <path id="guava.compile.path">
    <fileset dir="${external.dir}/guava/r09">
      <include name="guava-r09.jar"/>
    </fileset>
  </path>
  <path id="guava.deploy.path">
    <path refid="guava.compile.path"/>
  </path>
	
  <!-- Hamcrest -->
  <path id="hamcrest.compile.path">
    <fileset dir="${external.dir}/hamcrest/1.3.0rc2">
      <include name="hamcrest-all.jar"/>
    </fileset>
  </path>
  <path id="hamcrest.deploy.path">
    <path refid="hamcrest.compile.path"/>
  </path>

  <!-- High Scalability Lib -->
  <path id="high-scale-lib.compile.path">
    <fileset dir="${external.dir}/high-scale-lib/1.1.2">
      <include name="high-scale-lib.jar"/>
    </fileset>
  </path>
  <path id="high-scale-lib.deploy.path">
    <path refid="high-scale-lib.compile.path"/>
  </path>

  <!-- Mockito -->
  <path id="mockito.compile.path">
    <fileset dir="${external.dir}/mockito/1.8.5">
      <include name="mockito-all-1.8.5.jar"/>
    </fileset>
  </path>
  <path id="mockito.deploy.path">
    <path refid="mockito.compile.path"/>
  </path>

  <!-- PMD -->
  <path id="pmd.compile.path">
    <fileset dir="${external.dir}/pmd/4.2.5">
      <include name="asm-3.1.jar"/>
      <include name="jaxen-1.1.1.jar"/>
      <include name="pmd-4.2.5.jar"/>
    </fileset>
  </path>
  <path id="pmd.deploy.path">
    <path refid="pmd.compile.path"/>
  </path>
  <taskdef
   name="pmd"
   classname="net.sourceforge.pmd.ant.PMDTask"
   classpathref="pmd.compile.path"
  />

  <!-- TestNG -->
  <path id="testng.compile.path">
    <fileset dir="${external.dir}/testng/6.01">
      <include name="testng.jar"/>
    </fileset>
  </path>
  <path id="testng.deploy.path">
    <path refid="testng.compile.path"/>
  </path>
  <taskdef
   resource="testngtasks"
   classpathref="testng.compile.path"
  />
</project>
